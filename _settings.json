{

    "production": false,

    "paths": {

        "tasks": "./gulp-tasks",

        "src": {

            "fonts": [
                "./project/_assets/fonts/**.*",
                "./bower_components/bootstrap-sass/assets/fonts/bootstrap/**.*",
                "./bower_components/fonts-raleway/fonts/fonts-raleway/**.*",
                "./bower_components/roboto-fontface/fonts/**.*"
            ],

            "jekyll": [
                "./project/*",
                "./project/**/*.html",
                "./project/**/*.md",
                "./project/_data/*",
                "./project/_includes/**/*.md",
                "./project/_includes/**/*.md",
                "./project/_layouts/**/*.md",
                "./project/_layouts/**/*.md",
                "./project/_plugins/*",
                "./project/_posts/**/*.md",
                "./project/_posts/**/*.md"
            ],

            "js": "./project/_assets/js",
            "js_include": [
                "./bower_components/jquery/dist/jquery.js",
                "./bower_components/bootstrap-sass/assets/javascripts/bootstrap.js",
                "./project/_assets/js/**.*"
            ],

            "img": "./project/_assets/img",

            "sass": "./project/_assets/sass",
            "sass_include": [
                "./project/_assets/sass",
                "./bower_components/bootstrap-sass/assets/stylesheets",
                "./bower_components/font-awesome/scss",
                "./bower_components/roboto-fontface/css"
            ]

        },

        "dest": {
            "css": "./_site/assets/css",
            "fonts": "./_site/assets/fonts",
            "jekyll": "./_site",
            "js": "./_site/assets/js",
            "img": "./_site/assets/img"
        }

    },

    "plugins": {

        "autoprefixer": true,
        "sourcemaps": true,

        "options": {

            "autoprefixer": {
                "browsers": ["last 2 versions"],
                "cascade": false
            },

            "imagemin": {
                "prograssive": false,
                "svgoPlugins": [{
                    "removeViewBox": true
                }]
            },

            "minifier": {
                "processImports": false
            },

            "uglify": {
                "compress": {
                    "drop_console": true
                }
            }

        }
    }
}
