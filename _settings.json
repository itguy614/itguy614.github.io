{

    "production": false,

    "paths": {

        "tasks": "./_gulp-tasks",

        "src": {

            "fonts": [
                "./_assets/fonts/**.*",
                "./bower_components/bootstrap-sass/assets/fonts/bootstrap/**.*",
                "./bower_components/fonts-raleway/fonts/fonts-raleway/**.*",
                "./bower_components/roboto-fontface/fonts/**.*"
            ],

            "jekyll": [
                "./*.html",
                "./*.md",
                "./_data/*",
                "./_includes/**/*.html",
                "./_includes/**/*.md",
                "./_layouts/**/*.html",
                "./_layouts/**/*.md",
                "./_plugins/*",
                "./_posts/**/*.html",
                "./_posts/**/*.md"
            ],

            "js": "./_assets/js",
            "js_include": [
                "./bower_components/jquery/dist/jquery.js",
                "./bower_components/bootstrap-sass/assets/javascripts/bootstrap.js",
                "./_assets/js/**.*"
            ],

            "img": "./_assets/img",

            "sass": "./_assets/sass",
            "sass_include": [
                "./_assets/sass",
                "./bower_components/bootstrap-sass/assets/stylesheets",
                "./bower_components/font-awesome/scss",
                "./bower_components/roboto-fontface/css"
            ]

        },

        "dest": {
            "css": "./assets/css",
            "fonts": "./assets/fonts",
            "jekyll": "./_site",
            "js": "./assets/js",
            "img": "./assets/img"
        }

    },

    "plugins": {

        "autoprefixer": true,
        "sourcemaps": true,

        "options": {

            "autoprefixer": {
                "browsers": ["last 2 versions"],
                "cascade": false
            },

            "imagemin": {
                "prograssive": false,
                "svgoPlugins": [{
                    "removeViewBox": true
                }]
            },

            "minifier": {
                "processImports": false
            },

            "uglify": {
                "compress": {
                    "drop_console": true
                }
            }

        }
    }
}
